<div class='container'>
  <h1>My tasks</h1>
  <div>
    <% @tasks.each do |task| %>
      <% if task.completed == true %>
        <p>✔️<%= link_to task.title, task_path(task) %>
          <%= link_to "❌", task_path(task), method: :delete %></p>
      <% else %>
        <p>⚪️<%= link_to task.title, task_path(task) %>
        <%= link_to "❌", task_path(task), method: :delete %></p>
      <% end %>
    <% end %>
  </div>
  <p><%= link_to 'Add task', new_task_path, class: "btn btn-success" %></p>
</div>
