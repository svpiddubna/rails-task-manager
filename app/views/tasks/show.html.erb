<div class='container'>
  <h1><%= @task.title %></h1>
  <p class="p-3 mb-2 bg-light text-dark"><%= @task.details %></p>
  <div>
    <% if @task.completed == true %>
      <p>✔️ This task is completed</p>
    <% else %>
      <p>⚪️ This task is not completed yet</p>
    <% end %>
  </div>
  <p><%= link_to 'Update task', edit_task_path(@task), class: "btn btn-warning" %></p>
  <p><%= link_to 'Back to list', tasks_path, class: "btn btn-outline-secondary" %></p>
</div>
