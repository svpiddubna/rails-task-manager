<div class='container'>
  <h1>New Task</h1>
  <div>
    <%= form_for(@task) do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :details %>
        <%= f.text_field :details %>
        <%= f.submit class: "btn btn-success" %>
    <% end %>
    <p><%= link_to 'Back to list', tasks_path, class: "btn btn-outline-secondary" %></p>
  </div>

</div>
